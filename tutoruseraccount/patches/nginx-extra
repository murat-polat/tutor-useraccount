#### useraccount

upstream useraccount-backend {
    server useraccount:1999 fail_timeout=0;
}
server {
  listen 80;
  server_name {{ USERACCOUNT_HOST }};

  # Disables server version feedback on pages and in headers
  server_tokens off;

  client_max_body_size 10m;

  location / {
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://useraccount-backend;
  }
}